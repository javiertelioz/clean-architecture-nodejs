{
  "name": "clean-architecture-nodejs",
  "version": "1.2.0",
  "description": "A simple API built with Node + Clean Architecture principles",
  "author": "Javier Telio",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/javiertelioz/clean-architecture-nodejs"
  },
  "bugs": {
    "url": "https://github.com/javiertelioz/clean-architecture-nodejs/issues"
  },
  "homepage": "https://github.com/javiertelioz/clean-architecture-nodejs#readme",
  "scripts": {
    "start:dev": "nodemon",
    "start": "node /src/dist/src/index.js",
    "build": "tsc --project tsconfig-build.json",
    "test": "jest --runInBand --detectOpenHandles",
    "test:cov": "jest --ci --coverage",
    "test:watch": "NODE_ENV=test jest --watchAll",
    "test:e2e": "NODE_ENV=test jest --config ./e2e/jest.config.js --detectOpenHandles",
    "format": "prettier --write '**/*.ts'",
    "lint": "./node_modules/eslint/bin/eslint.js src/ test/ e2e/ --ext .ts --fix",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/server": "4.9.5",
    "accesscontrol": "2.2.1",
    "apollo-server-express": "3.13.0",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "compression": "1.7.4",
    "connect-redis": "7.1.0",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-session": "1.17.3",
    "graphql": "16.8.1",
    "graphql-scalars": "1.22.4",
    "helmet": "7.1.0",
    "http-status": "1.7.3",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.0.3",
    "morgan": "1.10.0",
    "pg": "8.11.3",
    "redis": "4.6.11",
    "reflect-metadata": "0.2.1",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "type-graphql": "2.0.0-beta.3",
    "typeorm": "0.3.17",
    "typeorm-naming-strategies": "4.1.0",
    "uuid": "9.0.1",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@types/bcrypt": "5.0.2",
    "@types/compression": "1.7.5",
    "@types/connect-redis": "0.0.23",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/express-session": "1.17.10",
    "@types/jest": "29.5.11",
    "@types/jsonwebtoken": "9.0.5",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "1.9.9",
    "@types/node": "20.10.4",
    "@types/supertest": "2.0.16",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.1.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "nodemon": "3.0.2",
    "prettier": "3.1.1",
    "standard-version": "9.5.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
