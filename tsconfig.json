{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "target": "es2021",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
